generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Book{
  id String @id @default(uuid())
  title String
  author String
  creatdAt DateTime @default(now())
}

model Cricketer {
  id          String   @id @default(uuid())
  name        String
  country     String
  role        String     
  battingStyle String?    
  bowlingStyle String?   
  matches     Int?       
  runs        Int?      
  wickets     Int?      
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
